{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Visual Basic LSP Server Configuration",
  "description": "Configuration file for the Enhanced Visual Basic Language Server",
  "indexing": {
    "enabled": true,
    "includeFiles": [
      "**/*.vb",
      "**/*.vbs",
      "**/*.bas",
      "**/*.cls",
      "**/*.frm"
    ],
    "excludeDirectories": [
      "node_modules",
      "bin",
      "obj",
      ".git",
      ".vs",
      "packages"
    ]
  },
  "diagnostics": {
    "enabled": true,
    "checkMissingTypes": true,
    "checkUnusedVariables": true,
    "checkMissingEndStatements": true
  }
}
