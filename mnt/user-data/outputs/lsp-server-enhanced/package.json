{
  "name": "enhanced-vb-lsp-server",
  "version": "2.0.0",
  "description": "An enhanced Language Server Protocol implementation for Visual Basic with workspace indexing and multi-file support",
  "main": "out/server.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "start": "node out/server.js",
    "start:bridge": "node out/websocket-bridge.js",
    "clean": "rm -rf out",
    "rebuild": "npm run clean && npm run compile"
  },
  "keywords": [
    "visual-basic",
    "vb",
    "language-server",
    "lsp",
    "intellisense",
    "monaco-editor"
  ],
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "MIT"
}
